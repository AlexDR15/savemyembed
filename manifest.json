{
    "name": "Save My Embed",
    "version": "1.1.1",
    "description": "Save the showed embed.vhx.tv content",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Save EMBED.VHX.TV video Now!",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "js": ["main.js"],
        "run_at": "document_end",
        "all_frames": true,
        "matches": ["https://embed.vhx.tv/videos/*"]
    }],
    "permissions": ["tabs", "https://*/*", "downloads"]
}